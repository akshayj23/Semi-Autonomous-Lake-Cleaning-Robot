	 $.get('/down_side');
	 $("#down").css('color', 'red');
     }).on('mouseup', function() {
	$.get('/stop');
	 clear_color();
    });

    $("#conveyor").on("mousedown", function() {
     if (bool==0)
     {
         $.get('/con-on');
         $("#conveyor").css('background-color', 'green');
         bool=1;
        }
        else{
            $.get('/con-off');
        $("#conveyor").css('background-color', 'blue');
         bool=0;
